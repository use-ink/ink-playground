{
  "name": "playground",
  "version": "1.0.0",
  "dependencies": {
    "comlink": "^4.3.1",
    "css-loader": "^6.3.0",
    "monaco-editor-webpack-plugin": "^4.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-monaco-editor": "^0.45.0",
    "tailwindcss-classnames": "^2.2.5"
  },
  "scripts": {
    "build": "rimraf dist pkg && webpack --config webpack.config.js --mode production",
    "start": "webpack serve --host 0.0.0.0",
    "clean": "rimraf dist pkg node_modules",
    "test": "jest --update-snapshot",
    "test:watch": "jest --update-snapshot --watch",
    "test:clear": "jest --clearCache",
    "bundlesize": "yarn bundlesize:generate && webpack-bundle-analyzer --port 8081 bundle-size-stats.json dist",
    "bundlesize:generate": "yarn build && yarn webpack --stats --json=bundle-size-stats.json"
  },
  "devDependencies": {
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.8",
    "@types/react-test-renderer": "^17.0.1",
    "@wasm-tool/wasm-pack-plugin": "^1.5.0",
    "autoprefixer": "^9",
    "css-loader": "^6.3.0",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^27.2.0",
    "mini-css-extract-plugin": "^2.4.2",
    "postcss": "^7",
    "postcss-cli": "^9.0.1",
    "postcss-loader": "^6.2.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "yarn:@tailwindcss/postcss7-compat",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "typescript": "^4.4.3",
    "webpack": "^5.52.1",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^4.2.1"
  }
}
